<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="#F472B6" />
            <corners android:radius="25dp" />
            <stroke
                android:width="2dp"
                android:color="#EC4899" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F472B6" />
            <corners android:radius="25dp" />
            <stroke
                android:width="2dp"
                android:color="#EC4899" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FDF2F8" />
            <corners android:radius="25dp" />
            <stroke
                android:width="2dp"
                android:color="#F9A8D4" />
        </shape>
    </item>
</selector>